{% extends 'layout1.html.twig' %}
{% block title %}Log in!
{% endblock %}

{% block contenido %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}

		<h2 class="tm-color-primary tm-post-title tm-mb-60">Login</h2>
		<div class="form-group row mb-4">
			<label for="inputUsername" class="col-sm-3 col-form-label text-right tm-color-primary">Username</label>
			<div class="col-sm-9">
				<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control mr-0 ml-auto" required autofocus>
			</div>
		</div>
		<div class="form-group row mb-4">
			<label for="inputPassword" class="col-sm-3 col-form-label text-right tm-color-primary">Password</label>
			<div class="col-sm-9">
				<input type="password" name="password" id="inputPassword" class="form-control mr-0 ml-auto" required>
			</div>
		</div>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
											        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
											        See https://symfony.com/doc/current/security/remember_me.html
											
											        <div class="checkbox mb-3">
											            <label>
											                <input type="checkbox" name="_remember_me"> Remember me
											            </label>
											        </div>
											    #}
		<div class="form-group row text-right">
			<div class="col-12">
				<button type="submit" class='tm-btn tm-btn-primary tm-btn-small'>Sign in</button>
			</div>
		</div>
	</form>
{% endblock %}
