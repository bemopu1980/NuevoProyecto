{% extends 'layout1.html.twig' %}
{# {label: 'Password'} , #}

{% block title %}Register
{% endblock %}

{% block contenido %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<div class="row tm-row tm-mb-120">
		<div class="col-12">
			<h2 class="tm-color-primary tm-post-title tm-mb-60">Register</h2>
		</div>
		<div class="col-lg-7 tm-contact-left">
			{{ form_start(registrationForm,{'attr': {'class': 'mb-5 ml-auto mr-0 tm-contact-form', 'method':'POST'}}) }}
			<div class="form-group row mb-4">
				<label for="Username" class="col-sm-3 col-form-label text-right tm-color-primary">Username</label>
				<div class="col-sm-9">
					{{ form_widget(registrationForm.username,{'attr': {'class': 'col-sm-3 col-form-label text-right tm-color-primary'}}) }}
				</div>
			</div>
			<div class="form-group row mb-4">
				<label for="Password" class="col-sm-3 col-form-label text-right tm-color-primary">Password</label>
				<div class="col-sm-9">
					{{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'col-sm-3 col-form-label text-right tm-color-primary'}}) }}
				</div>
			</div>
			<div class="form-group row mb-4">
            <label for="inputPassword" class="col-sm-3 col-form-label text-right tm-color-primary">AgreeTerms</label>
				{{ form_widget(registrationForm.agreeTerms,{'attr': {'class': 'col-sm-3 col-form-label text-right tm-color-primary'}}) }}
			</div>
			<div class="form-group row text-right">
				<div class="col-12">
					<button type="submit" class="tm-btn tm-btn-primary tm-btn-small">Register</button>
				</div>
			</div>
			{{ form_end(registrationForm) }}
		</div>
	</div>
{% endblock %}
