{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}

	<h1>Register</h1>

	{{ form_start(registrationForm) }}
	<div class="col-sm-9">
		{{ form_row(registrationForm.email, {'attr': {'class': 'form-control mr-0 ml-auto'}}) }}
	</div><br>
	<div class="col-sm-9">
		{{ form_row(registrationForm.plainPassword,{'attr': {'class': 'form-control mr-0 ml-auto'}}
		) }}
	</div><br>
	{{ form_row(registrationForm.agreeTerms) }}

	<button type="submit" class="tm-btn tm-btn-primary tm-btn-small">Register</button>
	{{ form_end(registrationForm) }}
{% endblock %}
