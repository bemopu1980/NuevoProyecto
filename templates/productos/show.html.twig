{% extends 'base.html.twig' %}

{% block title %}Productos{% endblock %}

{% block body %}
    <h1>Productos</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Img</th>
                <td><img src="{{asset(producto.getImg(),"img")}}" alt="Image"></td>
            </tr>
            <tr>
                <th>Mensaje</th>
                <td>{{ producto.mensaje }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ producto.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ producto.description }}</td>
            </tr>
            <tr>
                <th>Title2</th>
                <td>{{ producto.title2 }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ producto.date ? producto.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ producto.comments }}</td>
            </tr>
            <tr>
                <th>Createby</th>
                <td>{{ producto.createby }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ producto.Categoria }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('productos_index') }}">back to list</a>

    <a href="{{ path('productos_edit', {'id': producto.id}) }}">edit</a>

    {{ include('productos/_delete_form.html.twig') }}
{% endblock %}
